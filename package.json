{
  "name": "microfront",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-composer": "rimraf dist/composer/* && webpack -c src/client/composer/webpack.config.js",
    "build-hat": "rimraf dist/hat/* && webpack -c src/client/hat/webpack.config.js",
    "build": "concurrently 'yarn build-composer' 'yarn build-hat'",
    "serve-static": "node src/server/static",
    "serve-composer": "node src/server/composer",
    "serve-hat": "node src/server/hat",
    "serve": "concurrently 'yarn serve-static' 'yarn serve-composer' 'yarn serve-hat'",
	"test": "echo \"Error: no test specified\" && exit 1",
	"start": "yarn build && yarn serve"
  },
  "author": "tolstoguzov <tolstoguzov@tutu.ru>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.0",
    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "webpack-node-externals": "^2.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.12.5",
    "@tinkoff/shared-library-webpack-plugin": "^1.0.0",
    "babel-loader": "^8.2.1",
    "webpack": "4",
    "webpack-cli": "4"
  }
}
